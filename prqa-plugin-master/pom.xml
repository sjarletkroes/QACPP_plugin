
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent> 
        <groupId>org.jenkins-ci.plugins</groupId> 
        <artifactId>plugin</artifactId> 
        <version>1.640</version>
    </parent>

    <groupId>com.trixell</groupId>
    <artifactId>qacpp-plugin</artifactId>
    <version>1.0.0</version>
    <packaging>hpi</packaging>
    <name>QACPP plugin</name>
    <description>Integrates PRQA static analysis with Jenkins</description>
    <url>https://wiki.jenkins-ci.org/display/JENKINS/QACPP+Plugin</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <profiles>
        <profile>
            <id>copertura</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>cobertura-maven-plugin</artifactId>
                        <version>2.4</version>
                        <configuration>
                            <formats>
                                <format>html</format>
                                <format>xml</format>
                            </formats>
                        </configuration>
                        <executions>
                            <execution>
                                <id>do-coverage</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>cobertura</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
 
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </repository>
        <repository>
            <id>bintray</id>
            <url>http://dl.bintray.com/prqa/maven</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </pluginRepository>
    </pluginRepositories>

    <licenses>
        <license>
            <name>MIT</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url> 
        </license>
    </licenses>

    <developers>
        <developer>
            <id>sjarlet</id>
            <name>Sjarlet Kroes</name>
            <email>sjarlet.berlemont-kroes@trixell-thalesgroup.com</email>
            <organization>Trixell</organization>
            <roles>
                <role>maintainer</role>
            </roles>
            <timezone>0</timezone>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:ssh://github.com/sjarletkroes/QACPP_plugin.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/sjarletkroes/QACPP_plugin.git</developerConnection>
        <url>https://github.com/sjarletkroes/QACPP_plugin</url>
    </scm>
    <dependencies>
        <dependency>
            <groupId>net.trixell</groupId>
            <artifactId>prqa</artifactId>
            <version>1.6</version>
        </dependency>
        <dependency>
            <groupId>com.programmingresearch</groupId>
            <artifactId>prqa</artifactId>
            <version>2.0.11</version>
            <type>jar</type>
        </dependency>
    </dependencies>
</project>
